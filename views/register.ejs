<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<link rel="stylesheet" href="/css/bootstrap.min.css" />
	<link rel="stylesheet" href="/css/style.css" />
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<title>注册</title>
</head>
<body>
	<div class="login_panel">
		<p class="text-center">用户注册</p>
		<div class="container-fluid">
			<div class="container">
				<% if(success){ %>
					<p class="text-center"><%= success %></p>
				<% }%>
				<% if(error){ %>
					<p class="text-center"><%= error %></p>
				<% }%>
				<form action="/register" method="post" class="form-horizontal" enctype="multipart/form-data">
					<div class="input-group">
						<span class="input-group-addon">用户名</span>
						<input type="text" name="name" class="form-control" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">密码</span>
						<input type="password" name="password" id="" class="form-control" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">确认密码</span>
						<input type="password" name="repassword" id="" class="form-control" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">性别</span>
						<select name="gender" id="" class="form-control">
							<option value="m">女</option>
							<option value="f">男</option>
							<option value="x">保密</option>
						</select>
					</div>
					<div class="input-group">
						<span class="input-group-addon">个人简介</span>
						<textarea name="resume" id="" cols="30" rows="5" class="form-control"></textarea>
					</div>
					<div class="input-group">
						<span class="input-group">头像</span>
						<input type="file" name="portrait" id="" />
					</div>
					<div class="input-group">
						<input type="submit" value="注册" class="btn btn-block" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>