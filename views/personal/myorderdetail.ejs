<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<link rel="stylesheet" href="/css/bootstrap.min.css" />
	<link rel="stylesheet" href="/css/style.css" />
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<title>订单详情</title>
</head>
<body>
	<%- include('../common/header') %>
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
					<%- include('../common/left') %>
				</div>
				<div class="col-xs-12 col-sm-9 col-md-9 col-lg-10">
					<div class="right-wrap">
						<p class="text-center">订单详情</p>
						<%if(user){%>
						<p>用户：<%=user.name%></p>
						<%}%>
						<p>订单总额：￥<%=order.amount%></p>
						<p>下单时间：<%=order.created_at%></p>
						<p>订单状态：<%if(order.oStatus==0){%>
							待支付
						<%}else if(order.oStatus==1){%>
							已支付
						<%}else if(order.oStatus==2){%>
							已完成
						<%}else if(order.oStatus==3){%>
							已取消
						<%}%></p>
						<table class="table table-bordered text-center">
							<tr>
								<td>序号</td>
								<td>商品名称</td>
								<td>商品单价</td>
								<td>商品数量</td>
								<td>总额</td>
							</tr>
							<%for(var i in carts){if(!carts[i].cName)continue;%>
							<tr>
								<td><%=parseInt(i)+1%></td>
								<td><%=carts[i].cName%></td>
								<td><%=carts[i].cPrice%></td>
								<td><%=carts[i].cQuantity%></td>
								<td>￥<%=carts[i].cPrice*carts[i].cQuantity%></td>
							</tr>
							<%}%>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%- include('../common/footer') %>
</body>
</html>